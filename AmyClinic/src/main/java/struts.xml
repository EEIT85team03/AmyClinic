	<package name="AddEmp" namespace="/emp" extends="struts-default">
        <action name="AddActionEmp" class="group3.beef.employee.controller.AddEmpAction">
            <result name="input">/BeefTest/AddEMP.jsp</result>
			     </action>
    </package>
